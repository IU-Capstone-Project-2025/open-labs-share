# Stage 1: Build the React application
FROM node:18-alpine AS build

WORKDIR /app/frontend

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the frontend source code
COPY . .

# Accept the API Gateway URL as a build argument
ARG VITE_API_GATEWAY_ENDPOINT
ARG VITE_AUTH_API_ENDPOINT

# Create the .env.production file. `npm run build` uses this file by default.
RUN echo "VITE_API_GATEWAY_ENDPOINT=${VITE_API_GATEWAY_ENDPOINT}" > .env.production
RUN echo "VITE_AUTH_API_ENDPOINT=${VITE_AUTH_API_ENDPOINT}" >> .env.production


# --- DEBUGGING STEP ---
# Print the contents of the .env file to the build logs for verification
RUN echo "--- Verifying .env.production contents ---" && cat .env.production
# --- END DEBUGGING STEP ---

# Build the application for production 
RUN npm run build

# Stage 2: Serve the static files with Nginx
FROM nginx:stable-alpine

# Copy the built static files from the build stage to the Nginx public directory
COPY --from=build /app/frontend/dist /usr/share/nginx/html

# Copy the custom Nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80 for the Nginx server
EXPOSE 80

# Start Nginx in the foreground
CMD ["nginx", "-g", "daemon off;"] 
